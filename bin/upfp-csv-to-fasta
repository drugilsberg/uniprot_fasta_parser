#! /usr/bin/env python3
"""Use UPFP to parse a FASTA into a CSV file."""
import argparse
import gzip

from upfp import to_fasta

parser = argparse.ArgumentParser()
parser.add_argument(
    'csv_filepath', type=str,
    help='path to the CSV file'
)
parser.add_argument(
    'fasta_filepath', type=str,
    help='path where to store the FASTA file'
)
parser.add_argument(
    '-g', '--gzipped', action='store_true',
    help=(
        'flag to indicate whether the FASTA should be gzipped. '
        'Defaults to False.'
    ),
    default=False
)
parser.add_argument(
    '-c', '--chunk_size', type=int,
    help=(
        'size of the chunks used when writing the FASTA file. '
        'Defaults to 10000.'
    ),
    default=10000
)

if __name__ == '__main__':
    # parse arguments
    args = parser.parse_args()

    # read the csv in chunks
    chunks = to_fasta(args.csv_filepath, chunk_size=args.chunk_size)

    # write the fasta file
    if args.gzipped:
        with gzip.open(args.fasta_filepath, 'wb') as fp:
            for chunk in chunks:
                fp.write(chunk.encode('utf-8'))
    else:
        with open(args.fasta_filepath, 'w') as fp:
            for chunk in chunks:
                fp.write(chunk)
